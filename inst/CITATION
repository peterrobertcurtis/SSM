citHeader("To cite SSM in publications use:")

citEntry(entry = "Article",
  title        = "Smooth Supersaturated Models",
  author       = personList(as.person("Ron Bates"),
                   as.person("Hugo Maruri-Aguilar"),
                   as.person("Henry Wynn")),
  journal      = "Journal of Statistical Computation and Simulation",
  year         = "2014",
  volume       = "84",
  number       = "11",
  pages        = "2453--2464",

  textVersion  =
  paste("Ron Bates, Hugo Maruri-Aguilar, Henry Wynn (2014).",
        "Smooth Supersaturated Models.",
        "Journal of Statistical Computation and Simulation, 84(11), 2453-2464.")
)
